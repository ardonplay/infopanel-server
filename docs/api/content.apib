                "id": "41f70225-9231-4caa-93a4-db025486ba42",
                "type": "TEXT",
                "body": {
                    "content": "Hello, this is test content"
                    }
            }

    + Schema

            {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string"
                    },
                     "type": {
                        "type": "string"
                    },
                    "body": {
                        "type": "object"
                    }
                }
            }

